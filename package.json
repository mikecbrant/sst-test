    "@mikecbrant/appsyncjs-test-utils": "^1.2.5",
    "@vitest/coverage-v8": "^3.2.4",
    "sst": "^3.17.12",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.15.0"
}
